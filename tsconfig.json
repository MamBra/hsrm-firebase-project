{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "strict": true
  },
  "types": [
    "react",
    "react-dom",
    "react-native"
  ],
  "filesGlob": [
    "typings/index.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "node_modules/typescript/lib/lib.es6.d.ts"
  ],
  "exclude":[
    "build", 
    "node_modules",
    "jest.config.js",
    "App.js"
  ],
}
